{
    "name": "selfiq/liveproto-bot",
    "description": "Self-bot deployment on Koyeb using LiveProto",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "taknone/liveproto": "^0.0.12",
        "taknone/attributes": "^1.1",
        "taknone/bootstrapper": "1.2.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "replace": {
        "taknone/attributes": ">=1.1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tak\\Liveproto\\Database\\": "src/Liveproto/",
            "Tak\\Liveproto\\Utils\\": "src/Liveproto/",
            "Tak\\Attributes\\": "src/Liveproto/Attributes/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "taknone/bootstrapper": true
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "@php scripts/composer-bootstrap.php"
        ],
        "pre-update-cmd": [
            "@php scripts/composer-bootstrap.php"
        ]
    }
}
